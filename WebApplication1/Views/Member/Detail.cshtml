<script>
    function openNewTab(urlThanhVien) {
        var _motasoluoc = urlThanhVien;
        var arr = _motasoluoc.split('/');
        var infoWebsite = arr[0].split(':');
        var urlLinkWeb = infoWebsite[1].trim();

        var win = window.open("http://" + urlLinkWeb, '_blank');
        win.focus();
    }
</script>
