<div class="main-content section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                @*<form class="search-form widget" style="margin-bottom:15px;">
                    <input type="search" placeholder="Search" class="form-control search-form__input" />
                    <button type="submit" class="search-form__submit"><i class="fa fa-search base-color"></i> </button>
                </form>*@

                @{
                    if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            string urlhinhdaidien = @"../.." + item.ghichu;
                            <div class="col-sm-6 col-xs-12 res-mobile">
                                <div class="blog-post ">
                                    <div class="blog-post__thumbnail-wrap pr hinhdaidien-hanhtrinh" onclick="_RedirectUrl('@Url.Action("Detail", "Gallery",new{id=item.id})')">
                                        <img class="lazy" style="width:100%;height:100%;object-fit:fill" data-src="@urlhinhdaidien" alt="">
                                    </div>
                                    <div class="blog-post__text-content" style="height:200px;padding-top:10px;">
                                        <h4 class="blog-post__title heading-label-four tenhanhtrinh">
                                            <a href="@Url.Action("Detail", "Gallery",new{id=item.id})">
                                                @*Tên thành viên*@
                                                @*@item.tenloaihinhanh*@


                                                @{
                                                    if (Session["CurrentCulture"] == null)
                                                    {
                                                        @item.tenloaihinhanh
                                                    }
                                                    if (Session["CurrentCulture"] != null)
                                                    {
                                                        if (Session["CurrentCulture"].ToString() == "en-US")
                                                        {
                                                            @item.tenloaihinhanh_en
                                                        }
                                                        else
                                                        {
                                                            @item.tenloaihinhanh
                                                        }
                                                    }
                                                }
                                            </a>
                                        </h4>
                                        <div style="width:100%;" class="mota-hanhtrinh">
                                            @*Mô tả sơ lược*@
                                            @*@item.motahinhanh*@


                                            @{
                                                if (Session["CurrentCulture"] == null)
                                                {
                                                    @item.motahinhanh
                                                }
                                                if (Session["CurrentCulture"] != null)
                                                {
                                                    if (Session["CurrentCulture"].ToString() == "en-US")
                                                    {
                                                        @item.motahinhanh_en
                                                    }
                                                    else
                                                    {
                                                        @item.motahinhanh
                                                    }
                                                }
                                            }
                                        </div>
                                        <div class="btn_readmore" style="bottom: 45px;position: absolute; right:30px;">
                                            <a href="@Url.Action("Detail", "Gallery",new{id=item.id})" class="btn">Read More</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                <div class="clear"></div>
                @{
                    if (ViewBag.haspagination)
                    {
                        <div class="fund-pagination mb30">

                            @if ((int)ViewBag.pages != 0)
                            {
                                for (int i = 1; i <= Convert.ToInt32(ViewBag.pages); i++)
                                {
                                    if (i == Convert.ToInt32(ViewBag.pickpage))
                                    {
                                        <a class="active" href="@Url.Action("Index", "Gallery",new{Page=i})">@i</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Index", "Gallery",new{Page=i})">@i</a>
                                    }
                                }
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
