<div class="main-content section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="blog-details">
                    <div class="blog-details-top mb40">
                        <div class="blog-details-image mb10 pd30" style="padding:30px;">
                            @*<img class="lazy" style="max-height:400px" width="750" height="438" data-src="@ViewBag.hinhdaidien" alt="">*@
                            <img class="lazy" style="max-height:500px;width:100%;" data-src="@ViewBag.hinhdaidien" alt="">
                            <div class="loader"></div>
                        </div>
                        <div class="blog-details-top__text-content">
                            <h3 class="blog-details__title">
                                @*Tên hành trình*@
                                @*@Html.DisplayFor(model => model.tenhanhtrinh)*@

                                @{
                                    if (Session["CurrentCulture"] == null)
                                    {
                                        @Html.DisplayFor(model => model.tenhanhtrinh)
                                    }
                                    if (Session["CurrentCulture"] != null)
                                    {
                                        if (Session["CurrentCulture"].ToString() == "en-US")
                                        {
                                            @Html.DisplayFor(model => model.tenhanhtrinh_en)
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.tenhanhtrinh)
                                        }
                                    }
                                }


                            </h3>

                            <div class="hanhtrinh_motasoluoc" style="margin-bottom:30px;">
                                @*Mô tả sơ lược*@
                                @*@Html.DisplayFor(model => model.motasoluoc)*@

                                @{
                                    if (Session["CurrentCulture"] == null)
                                    {
                                        @Html.DisplayFor(model => model.motasoluoc)
                                    }
                                    if (Session["CurrentCulture"] != null)
                                    {
                                        if (Session["CurrentCulture"].ToString() == "en-US")
                                        {
                                            @Html.DisplayFor(model => model.motasoluoc_en)
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.motasoluoc)
                                        }
                                    }
                                }

                            </div>

                            <div class="blog-details__meta">
                                <div class="blog-details__meta-item"><i class="fa fa-calendar pdr5 base-color"></i>
                                @*Time journey*@
                                @Html.DisplayFor(model => model.thongtinthoigian)
                                </div>
                                <div class="blog-details__meta-item"><i class="fa fa-map-marker fund-event__icon base-color"></i>
                                @*Place*@
                                    @*@Html.DisplayFor(model => model.thongtindiadiem)*@



                                    @{
                                        if (Session["CurrentCulture"] == null)
                                        {
                                            @Html.DisplayFor(model => model.thongtindiadiem)
                                        }
                                        if (Session["CurrentCulture"] != null)
                                        {
                                            if (Session["CurrentCulture"].ToString() == "en-US")
                                            {
                                                @Html.DisplayFor(model => model.diadiem_en)
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(model => model.thongtindiadiem)
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="blog-details-top mb40" style="padding:30px;float:left;width:100%;">
                        @*@Html.Raw(Model.noidung)*@

                        @{
                            if (Session["CurrentCulture"] == null)
                            {
                                @Html.Raw(Model.noidung)
                            }
                            if (Session["CurrentCulture"] != null)
                            {
                                if (Session["CurrentCulture"].ToString() == "en-US")
                                {
                                    @Html.Raw(Model.noidung_en)
                                }
                                else
                                {
                                    @Html.Raw(Model.noidung)
                                }
                            }
                        }


