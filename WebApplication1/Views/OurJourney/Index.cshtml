@{
    if (Model != null)
    {
        foreach (var item in Model)
        {
            string urlhinhdaidien = @"../.." + item.hinhdaidien;
            <div class="col-sm-6 col-xs-12 res-mobile">
                <div class="blog-post ">
                    <div class="blog-post__thumbnail-wrap pr hinhdaidien-hanhtrinh" onclick="_RedirectUrl('@Url.Action("Detail", "OurJourney",new{id=item.id})')">
                        <img class="lazy" style="width:100%;height:100%;object-fit:fill" data-src="@urlhinhdaidien" alt="">
                    </div>
                    <div class="blog-post__text-content" style="height:200px;padding-top:10px;">
                        <h4 class="blog-post__title heading-label-four tenhanhtrinh">
                            <a href="@Url.Action("Detail", "OurJourney",new{id=item.id})">
                                @*Tên hành trình*@
                                
                                @{
                                    if (Session["CurrentCulture"] == null)
                                    {
                                        @item.tenhanhtrinh
                                    }
                                    if (Session["CurrentCulture"] != null)
                                    {
                                        if (Session["CurrentCulture"].ToString() == "en-US")
                                        {
                                            @item.tenhanhtrinh_en
                                        }else
                                        {
                                            @item.tenhanhtrinh
                                        }
                                    }
                                }
                            </a>
                        </h4>
                        <div class="blog-post__meta-info">
                            <span class="small-text">
                                <i class="fa fa-map-marker fund-event__icon base-color"></i>
                                @*Địa điểm*@
                                @*@item.thongtindiadiem*@

                                @{
                                    if (Session["CurrentCulture"] == null)
                                    {
                                        @item.thongtindiadiem
                                    }
                                    if (Session["CurrentCulture"] != null)
                                    {
                                        if (Session["CurrentCulture"].ToString() == "en-US")
                                        {
                                            @item.diadiem_en
                                        }
                                        else
                                        {
                                            @item.thongtindiadiem
                                        }
                                    }
                                }

                            </span>
                            <span class="small-text">
                                <i class="fa fa-calendar base-color"></i>
                                @*Thời gian*@
                                @item.thongtinthoigian
                            </span>
                        </div>
                        <div style="width:100%;" class="mota-hanhtrinh" >
                            @*Mô tả sơ lược*@
                            @*@item.motasoluoc*@

                            @{
                                if (Session["CurrentCulture"] == null)
                                {
                                    @item.motasoluoc
                                }
                                if (Session["CurrentCulture"] != null)
                                {
                                    if (Session["CurrentCulture"].ToString() == "en-US")
                                    {
                                        @item.motasoluoc_en
                                    }
                                    else
                                    {
                                        @item.motasoluoc
                                    }
                                }
                            }

                        </div>

                        @*<div class="bottom-block-hanhtrinh">

                        </div>*@
                        <div class="fund-event__date" style="bottom: 45px;position: absolute;left:25px;min-width:90px;max-width:90px;">
                            <span class="fund-event__day base-color" style="font:30px">
                                @*Ngày*@
                                @{ 
                                    DateTime UpdatedTime = item.ngaytao ?? DateTime.Now;
                                    var ngay = UpdatedTime.Day;
                                    var thangnam = "Tháng " + UpdatedTime.Month + " - " + UpdatedTime.Year;
                                }
                                @ngay
                            </span>
                            <span class="small-text nv-color">
                                @*Tháng năm*@
                                @thangnam
                            </span>
                        </div>
                        <div class="btn_readmore" style="bottom: 45px;position: absolute; right:30px;">
                            <a href="@Url.Action("Detail", "OurJourney",new{id=item.id})" class="btn">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
                <div class="clear"></div>
